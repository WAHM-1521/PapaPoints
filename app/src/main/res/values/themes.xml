<resources>
    <!-- Base application theme. -->
    <style name="Theme.PapaPoints" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/holoOrangeDark</item>
        <item name="colorPrimaryVariant">@color/pink_variant</item>
        <item name="colorOnPrimary">@color/pink_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/rubik</item>
    </style>

</resources>