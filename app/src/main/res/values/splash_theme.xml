<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.PapaPoints</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/pink_medium_variant</item>
        <item name="android:navigationBarColor">@color/pink_medium_variant</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>