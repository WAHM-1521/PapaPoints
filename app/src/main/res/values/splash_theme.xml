<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for splashscreen -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.PapaPoints</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/pink_medium_variant</item>
        <item name="android:navigationBarColor">@color/pink_medium_variant</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Theme for API 32 and higher -->
    <style name="Theme.AppSplashApi32" parent="Theme.AppSplash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen</item>
    </style>

    <!-- Theme for API 31 and lower -->
    <style name="Theme.AppSplashApi31" parent="Theme.AppSplash">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
    </style>

</resources>